<Page x:Class="ComputerPeripheralsShop.Views.Pages.MenuPages.AboutUs"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ComputerPeripheralsShop.Views.Pages.MenuPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="1000"
      Title="AboutUs" Background="#161616" MinHeight="1200" FontFamily="fonts/#BrownMedium Regular">
    <Page.Resources>
        <ResourceDictionary Source="/ResourceDictionaries/MenuPagesDictionary.xaml"/>
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="#a20520">
            <TextBlock Style="{StaticResource MainText}" FontSize="46" Margin="50 20 60 20" HorizontalAlignment="Left" TextWrapping="Wrap">
                We are modern and convenient store of computer peripherals
            </TextBlock>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.Background>
                <ImageBrush ImageSource="\Resources\BGAboutUs.jpg" Opacity="0.07"/>
            </Grid.Background>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Row="0" Grid.Column="0">
                <TextBlock Style="{StaticResource AboutUsBlockText}" Text="Our mission" FontSize="40"/>
                <TextBlock Style="{StaticResource AboutUsAdditionalText}">TechMarkets mission has been<LineBreak/> to develop gaming solutions <LineBreak/>for every type of gamer and<LineBreak/> the company is consistently <LineBreak/>recognized for delivering <LineBreak/>products that provide<LineBreak/>superior comfort, aesthetics,<LineBreak/>performance, and reliability.</TextBlock>
            </Grid>
            <Grid Grid.Row="0" Grid.Column="1">
                <TextBlock Style="{StaticResource AboutUsBlockText}" Text="Our essence" FontSize="40"/>
                <TextBlock Style="{StaticResource AboutUsAdditionalText}">At our core, TechMarket<LineBreak/> operates on Imagination,<LineBreak/> Individuality, Inclusivity,<LineBreak/> and Impact.</TextBlock>
            </Grid>
            <Grid Grid.Row="1" Grid.Column="0">
                <TextBlock Style="{StaticResource AboutUsBlockText}" Text="Our promise" FontSize="40"/>
                <TextBlock Style="{StaticResource AboutUsAdditionalText}">We promise to handle your<LineBreak/> information in line with our<LineBreak/> privacy policy. If we <LineBreak/>ever get boring, you can <LineBreak/>'unsubscribe' from us</TextBlock>
            </Grid>
            <Grid Grid.Row="1" Grid.Column="1">
                <TextBlock Style="{StaticResource AboutUsBlockText}" Text="Our vibe" FontSize="40"/>
                <TextBlock Style="{StaticResource AboutUsAdditionalText}">At TechMarket, we make magic.<LineBreak/> We dream it, and then do<LineBreak/>  it together every day <LineBreak/>reinventing what's possible</TextBlock>
            </Grid>
        </Grid>

        <Grid Grid.Row="2">
            <TextBlock  Style="{StaticResource MainText}" FontSize="40" Margin="50 20" HorizontalAlignment="Left" TextWrapping="Wrap">It takes months to find a customer...<LineBreak/>seconds to lose one</TextBlock>
        </Grid>
    </Grid>
</Page>
